{
  "name": "@boilerplate/mobile",
  "version": "0.0.1",
  "private": true,
  "main": "index.ts",
  "scripts": {
    "start": "npx expo start",
    "start:tunnel": "npx expo start --tunnel",
    "start:clean": "yarn clean:watchman && yarn clean:derived && npx expo start -c",
    "ios": "expo run:ios",
    "ios:scheme:storekit": "expo run:ios --scheme ClassicGarage_TestStoreKit",
    "android": "expo run:android",
    "web": "npx expo start --web",
    "compile": "tsc --noEmit -p . --pretty",
    "format": "prettier --write \"app/**/*.{js,jsx,json,md,ts,tsx}\"",
    "lint": "eslint App.tsx app test --fix --ext .js,.ts,.tsx && npm run format",
    "patch": "patch-package",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:maestro": "maestro test .maestro/Login.yaml",
    "adb": "adb reverse tcp:9090 tcp:9090 && adb reverse tcp:3000 tcp:3000 && adb reverse tcp:9001 tcp:9001 && adb reverse tcp:8081 tcp:8081",
    "bundle:visualize": "npx react-native-bundle-visualizer",
    "bundle:visualize:dev": "npx react-native-bundle-visualizer --dev",
    "bundle:web": "npx expo export --platform web",
    "serve:web": "npx server dist",
    "clean": "yarn clean:derived && yarn clean:cache && yarn clean:watchman && yarn clean:vars",
    "clean:hard": "yarn clean:folders && yarn clean",
    "clean:cache": "rm -rf .expo .expo-shared ios/build android/build",
    "clean:derived": "rm -rf ~/Library/Developer/Xcode/DerivedData/*",
    "clean:watchman": "watchman watch-del-all",
    "clean:folders": "rm -rf ios android",
    "clean:vars": "rm -rf ios/.xcode.env ios/.xcode.env.local",
    "pods": "PATH=$(echo $PATH | sed 's/[^:]*://'); cd ios; pod install; cd ..",
    "prebuild": "npx expo prebuild",
    "prebuild:clean": "yarn clean && npx expo prebuild --clean",
    "prebuild:ios": "yarn prebuild --platform ios",
    "prebuild:android": "yarn prebuild --platform android",
    "build:ios:local:sim": "eas build --profile development:sim --platform ios --local",
    "build:ios:local:dev": "eas build --profile development --platform ios --local",
    "build:ios:local:device": "eas build --profile development:device --platform ios --local",
    "build:ios:local:prod": "eas build --profile production --platform ios --local",
    "build:android:local:sim": "eas build --profile development:sim --platform android --local",
    "build:android:local:dev": "eas build --profile development --platform android --local",
    "build:android:local:device": "eas build --profile development:device --platform android --local",
    "build:android:local:prod": "eas build --profile production --platform android --local",
    "build:ios:sim": "eas build --profile development:sim --platform ios",
    "build:ios:dev": "eas build --profile development --platform ios",
    "build:ios:device": "eas build --profile development:device --platform ios",
    "build:ios:prod": "eas build --profile production --platform ios",
    "submit:ios": "eas submit --profile production --platform ios",
    "submit:android": "eas submit --profile production --platform android",
    "ngrok:serve": "ngrok http 3000 --domain=brief-leading-polliwog.ngrok-free.app"
  },
  "dependencies": {
    "@boilerplate/api": "workspace:*",
    "@boilerplate/shared": "workspace:*",
    "@expo-google-fonts/raleway": "^0.2.3",
    "@expo/metro-runtime": "~3.2.1",
    "@hookform/resolvers": "^3.9.0",
    "@invertase/react-native-apple-authentication": "^2.3.0",
    "@react-native-async-storage/async-storage": "1.23.1",
    "@react-native-community/netinfo": "11.3.1",
    "@react-native-firebase/analytics": "^20.4.0",
    "@react-native-firebase/app": "^20.4.0",
    "@react-native-firebase/app-check": "^20.4.0",
    "@react-native-firebase/auth": "^20.4.0",
    "@react-native-firebase/crashlytics": "^20.4.0",
    "@react-native-firebase/dynamic-links": "^20.4.0",
    "@react-native-google-signin/google-signin": "^12.2.1",
    "@react-navigation/bottom-tabs": "^6.6.1",
    "@react-navigation/drawer": "^6.7.2",
    "@react-navigation/material-top-tabs": "^6.6.14",
    "@react-navigation/native": "^6.1.18",
    "@react-navigation/native-stack": "^6.11.0",
    "@shopify/flash-list": "^1.6.4",
    "@tanstack/react-query": "^5.51.23",
    "@trpc/client": "^11.0.0-rc.477",
    "@trpc/react-query": "^11.0.0-rc.477",
    "@trpc/server": "^11.0.0-rc.477",
    "apisauce": "3.0.1",
    "date-fns": "^2.30.0",
    "expo": "~51.0.8",
    "expo-apple-authentication": "~6.4.2",
    "expo-application": "~5.9.1",
    "expo-build-properties": "~0.12.1",
    "expo-crypto": "~13.0.2",
    "expo-dev-client": "~4.0.14",
    "expo-device": "~6.0.2",
    "expo-document-picker": "~12.0.2",
    "expo-file-system": "~17.0.1",
    "expo-font": "~12.0.5",
    "expo-image": "~1.12.15",
    "expo-image-manipulator": "~12.0.5",
    "expo-image-picker": "~15.0.7",
    "expo-linking": "~6.3.1",
    "expo-localization": "~15.0.3",
    "expo-splash-screen": "~0.27.4",
    "expo-status-bar": "~1.12.1",
    "i18n-js": "3.9.2",
    "jwt-decode": "^4.0.0",
    "mobx": "6.10.2",
    "mobx-react-lite": "4.0.5",
    "mobx-state-tree": "5.3.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.53.0",
    "react-native": "~0.74.2",
    "react-native-drawer-layout": "4.0.0-alpha.9",
    "react-native-gesture-handler": "~2.16.1",
    "react-native-pager-view": "6.3.0",
    "react-native-purchases": "^8.0.1",
    "react-native-purchases-ui": "^8.0.1",
    "react-native-reanimated": "~3.10.1",
    "react-native-safe-area-context": "4.10.1",
    "react-native-screens": "3.31.1",
    "react-native-svg": "15.2.0",
    "react-native-tab-view": "^3.5.2",
    "react-native-web": "~0.19.6",
    "superjson": "^2.2.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/plugin-transform-arrow-functions": "^7.0.0",
    "@babel/plugin-transform-shorthand-properties": "^7.0.0",
    "@babel/plugin-transform-template-literals": "^7.0.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@types/i18n-js": "3.8.2",
    "@types/jest": "^29.2.1",
    "@types/react": "~18.2.14",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "babel-jest": "^29.2.1",
    "eslint": "8.17.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-standard": "17.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-react": "7.30.0",
    "eslint-plugin-react-native": "4.0.0",
    "eslint-plugin-reactotron": "^0.1.2",
    "jest": "^29.2.1",
    "jest-expo": "~51.0.2",
    "patch-package": "^8.0.0",
    "postinstall-prepare": "1.0.1",
    "prettier": "2.8.8",
    "react-native-svg-transformer": "^1.5.0",
    "react-test-renderer": "18.2.0",
    "reactotron-core-client": "^2.8.13",
    "reactotron-mst": "^3.1.7",
    "reactotron-react-js": "^3.3.11",
    "reactotron-react-native": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.3"
  },
  "engines": {
    "node": ">=18"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:react-native/all",
      "standard",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint",
      "react",
      "react-native",
      "reactotron"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "settings": {
      "react": {
        "pragma": "React",
        "version": "detect"
      }
    },
    "globals": {
      "__DEV__": false,
      "jasmine": false,
      "beforeAll": false,
      "afterAll": false,
      "beforeEach": false,
      "afterEach": false,
      "test": false,
      "expect": false,
      "describe": false,
      "jest": false,
      "it": false
    },
    "rules": {
      "@typescript-eslint/ban-ts-ignore": 0,
      "@typescript-eslint/ban-ts-comment": 0,
      "@typescript-eslint/explicit-function-return-type": 0,
      "@typescript-eslint/explicit-member-accessibility": 0,
      "@typescript-eslint/explicit-module-boundary-types": 0,
      "@typescript-eslint/indent": 0,
      "@typescript-eslint/member-delimiter-style": 0,
      "@typescript-eslint/no-empty-interface": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/no-object-literal-type-assertion": 0,
      "@typescript-eslint/no-var-requires": 0,
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ],
      "comma-dangle": 0,
      "multiline-ternary": 0,
      "no-undef": 0,
      "no-unused-vars": 0,
      "no-use-before-define": 0,
      "no-global-assign": 0,
      "quotes": 0,
      "react-native/no-raw-text": 0,
      "react/no-unescaped-entities": 0,
      "react/prop-types": 0,
      "space-before-function-paren": 0,
      "reactotron/no-tron-in-production": "error"
    }
  }
}
